{
    "name": "sage/heading",
    "title": "Heading",
    "blade": "heading.blade.php",
    "category": "wmbb",
    "icon": "heading",
    "description": "Custom Heading block with font style options",
    "textdomain": "sage",

    "attributes": {
        "content": {
            "type": "string",
            "default": ""
        },
        "fontClass": {
            "type": "string",
            "default": "h1-forza"
        },
        "textColor": {
            "type": "string",
            "default": "black"
        },
        "marginBottom": {
            "type": "string",
            "default": "mb-4"
        },
        "fontFamily": {
            "type": "string",
            "default": "forza"
        },
        "enableAnimation": {
            "type": "boolean",
            "default": true
        },
        "animationDelay": {
            "type": "number",
            "default": 100
        },
        "animationType": {
            "type": "string",
            "default": "fade-up"
        }
    },
    "editorScript": "file:./block.jsx",
    "style": "file:./block.css",
    "render": "file:./block.php",
    "example": {
        "attributes": {
            "content": "Example Heading",
            "fontClass": "h1-forza",
            "textColor": "black",
            "marginBottom": "mb-4",
            "fontFamily": "forza"
        }
    }
}